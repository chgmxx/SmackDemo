<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/left_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:paddingBottom="3.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="3.0dip">

        <ImageView
            android:id="@+id/from_head"
            android:layout_width="@dimen/dimen_chat_headsmallimage"
            android:layout_height="@dimen/dimen_chat_headsmallimage"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dip"
            android:src="@drawable/huifu_head"
            android:textColor="#FF000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/row_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/from_head"
            android:layout_toRightOf="@+id/from_head"
            android:background="@drawable/incoming9"
            android:textColor="#FF000000"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/iv_picture"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/from_head"
            android:layout_marginRight="5.0dp"
            android:layout_toRightOf="@id/from_head"
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/voice_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/row_msg"
            android:textColor="#FF000000"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:paddingBottom="3.0dip"
        android:paddingLeft="10.0dip"
        android:paddingTop="3.0dip">

        <ImageView
            android:id="@+id/from_head_right"
            android:layout_width="@dimen/dimen_chat_headsmallimage"
            android:layout_height="@dimen/dimen_chat_headsmallimage"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/tiwen_head"
            android:textColor="#FF000000" />

        <TextView
            android:id="@+id/row_msg_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/from_head_right"
            android:layout_toLeftOf="@+id/from_head_right"
            android:background="@drawable/tiwen"
            android:textColor="#FF000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_picture_right"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/from_head_right"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5.0dp"
            android:layout_toLeftOf="@id/from_head_right"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:src="@color/black" />

        <TextView
            android:id="@+id/voice_time_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/row_msg_right"
            android:textColor="#FF000000"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>
